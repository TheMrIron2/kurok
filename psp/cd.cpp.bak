}

void CDAudio_Shutdown(void)
{
	CDAudio_Stop();

	// Clear the channel callback.
	//pspAudioSetChannelCallback(1, 0, 0);

	// Shut down MAD.
	mad_synth_finish(&synth);
	mad_frame_finish(&frame);
	mad_stream_finish(&stream);
}
