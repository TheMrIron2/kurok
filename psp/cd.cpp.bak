void CDAudio_Play(byte track, qboolean looping)
{
	CDAudio_Stop();

	char path[7];
	sprintf(path, "%02u.mp3", 1);

	Sys_FileOpenRead(path, &file);
	if (file >= 0)
	{
		Con_Printf("Playing %s\n", path);
	}
	else
	{
		Con_Printf("Couldn't find %s\n", path);
	}
}

void CDAudio_Stop(void)
{
	if (file >= 0)
	{
		Sys_FileClose(file);
	}
}

